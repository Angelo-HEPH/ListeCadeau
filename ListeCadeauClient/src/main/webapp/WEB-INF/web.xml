<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <display-name>ListeCadeauClient</display-name>
    
    <!-- URL 
    <context-param>
        <param-name>api.base.url</param-name>
        <param-value>http://localhost:8080/ListeCadeauAPI/api/</param-value>
    </context-param> -->
    
    <!-- AUTHENTICATION -->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.auth.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/createAccount</url-pattern>
    </servlet-mapping>

    <!-- HOME -->

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.home.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- LISTE CADEAU -->

    <servlet>
        <servlet-name>CreateListeCadeauServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.listecadeau.CreateListeCadeauServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateListeCadeauServlet</servlet-name>
        <url-pattern>/liste/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListeAllServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.listecadeau.ListeAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeAllServlet</servlet-name>
        <url-pattern>/liste/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListeDetailServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.listecadeau.ListeDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeDetailServlet</servlet-name>
        <url-pattern>/liste/detail</url-pattern>
    </servlet-mapping>

    <!-- CADEAU -->

    <servlet>
        <servlet-name>CreateCadeauServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.cadeau.CreateCadeauServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCadeauServlet</servlet-name>
        <url-pattern>/cadeau/create</url-pattern>
    </servlet-mapping>

    <!-- WELCOME -->

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>

</web-app>
