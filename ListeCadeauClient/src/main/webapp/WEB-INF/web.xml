<?xml version="1.0" encoding="UTF-8"?>
<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <display-name>ListeCadeauClient</display-name>
    
    <!-- URL 
    <context-param>
        <param-name>api.base.url</param-name>
        <param-value>http://localhost:8080/ListeCadeauAPI/api/</param-value>
    </context-param> -->
    

	<!-- FILTERS -->
	<filter>
	    <filter-name>CharacterEncodingFilter</filter-name>
	    <filter-class>be.couderiannello.filters.CharacterEncodingFilter</filter-class>
	</filter>
	
	<filter-mapping>
	    <filter-name>CharacterEncodingFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<filter>
	    <filter-name>AuthenticationFilter</filter-name>
	    <filter-class>be.couderiannello.filters.AuthenticationFilter</filter-class>
	</filter>
	
	<filter-mapping>
	    <filter-name>AuthenticationFilter</filter-name>
	    <url-pattern>/*</url-pattern>
	</filter-mapping>


    <!-- AUTHENTICATION -->

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateAccountServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.auth.CreateAccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccountServlet</servlet-name>
        <url-pattern>/createAccount</url-pattern>
    </servlet-mapping>

    <!-- HOME -->

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.home.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- LISTE CADEAU -->

    <servlet>
        <servlet-name>CreateListeCadeauServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.listecadeau.CreateListeCadeauServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateListeCadeauServlet</servlet-name>
        <url-pattern>/liste/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListeAllServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.listecadeau.ListeAllServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeAllServlet</servlet-name>
        <url-pattern>/liste/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListeManageServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.listecadeau.ListeManageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListeManageServlet</servlet-name>
        <url-pattern>/liste/manage</url-pattern>
    </servlet-mapping>
    
	 <servlet>
	  <servlet-name>InvitationsListeCadeauServlet</servlet-name>
	  <servlet-class>be.couderiannello.servlets.listecadeau.InvitationsListeCadeauServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>InvitationsListeCadeauServlet</servlet-name>
	  <url-pattern>/liste/invitations</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>ListeViewServlet</servlet-name>
	  <servlet-class>be.couderiannello.servlets.listecadeau.ListeViewServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>ListeViewServlet</servlet-name>
	  <url-pattern>/liste/view</url-pattern>
	</servlet-mapping>
	
	<servlet>
    <servlet-name>ListeDeleteServlet</servlet-name>
    <servlet-class>
        be.couderiannello.servlets.listecadeau.ListeDeleteServlet
    </servlet-class>
	</servlet>

	<servlet-mapping>
	    <servlet-name>ListeDeleteServlet</servlet-name>
	    <url-pattern>/liste/delete</url-pattern>
	</servlet-mapping>

	<servlet>
	    <servlet-name>ListeEditServlet</servlet-name>
	    <servlet-class>
	        be.couderiannello.servlets.listecadeau.ListeEditServlet
	    </servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ListeEditServlet</servlet-name>
	    <url-pattern>/liste/edit</url-pattern>
	</servlet-mapping>


    <!-- CADEAU -->

    <servlet>
        <servlet-name>CreateCadeauServlet</servlet-name>
        <servlet-class>be.couderiannello.servlets.cadeau.CreateCadeauServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCadeauServlet</servlet-name>
        <url-pattern>/cadeau/create</url-pattern>
    </servlet-mapping>
    
    <servlet>
    <servlet-name>CadeauDeleteServlet</servlet-name>
    <servlet-class>
        be.couderiannello.servlets.cadeau.CadeauDeleteServlet
    </servlet-class>
	</servlet>

	<servlet-mapping>
	    <servlet-name>CadeauDeleteServlet</servlet-name>
	    <url-pattern>/cadeau/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
    <servlet-name>CadeauEditServlet</servlet-name>
    <servlet-class>
        be.couderiannello.servlets.cadeau.CadeauEditServlet
    </servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>CadeauEditServlet</servlet-name>
	    <url-pattern>/cadeau/edit</url-pattern>
	</servlet-mapping>


	<!-- PROFIL -->

	<servlet>
	    <servlet-name>ProfileServlet</servlet-name>
	    <servlet-class>
	        be.couderiannello.servlets.personne.ProfileServlet
	    </servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ProfileServlet</servlet-name>
	    <url-pattern>/profile</url-pattern>
	</servlet-mapping>
	
	<servlet>
	    <servlet-name>ProfileEditServlet</servlet-name>
	    <servlet-class>
	        be.couderiannello.servlets.personne.ProfileEditServlet
	    </servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>ProfileEditServlet</servlet-name>
	    <url-pattern>/profile/edit</url-pattern>
	</servlet-mapping>

	<servlet>
	  <servlet-name>ReservationFullServlet</servlet-name>
	  <servlet-class>be.couderiannello.servlets.reservation.ReservationFullServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>ReservationFullServlet</servlet-name>
	  <url-pattern>/reservation/full</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>ContributionServlet</servlet-name>
	  <servlet-class>be.couderiannello.servlets.reservation.ContributionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>ContributionServlet</servlet-name>
	  <url-pattern>/reservation/contribuer</url-pattern>
	</servlet-mapping>
	
	<servlet>
	  <servlet-name>ViewContributionServlet</servlet-name>
	  <servlet-class>be.couderiannello.servlets.reservation.ViewContributionServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>ViewContributionServlet</servlet-name>
	  <url-pattern>/reservation/contributions</url-pattern>
	</servlet-mapping>

	<!-- NOTIFICATION -->
	<servlet>
	  <servlet-name>ViewNotificationServlet</servlet-name>
	  <servlet-class>be.couderiannello.servlets.notifications.ViewNotificationServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	  <servlet-name>ViewNotificationServlet</servlet-name>
	  <url-pattern>/notifications</url-pattern>
	</servlet-mapping>

    <!-- WELCOME -->

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
